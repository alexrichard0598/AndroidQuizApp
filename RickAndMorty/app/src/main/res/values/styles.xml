<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ParagraphText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="QuestionsText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SmallText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="color">?attr/colorPrimaryVariant</item>
    </style>
</resources>